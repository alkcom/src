        </Setter>
    </Style>
    
    <Style TargetType="ToggleButton" x:Key="AlarmFooterButton" BasedOn="{StaticResource FooterRightButton}">
        <Setter Property="Content" Value="{StaticResource AlarmIconBlack}"/>
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
